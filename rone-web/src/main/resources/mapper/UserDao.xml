<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 官方文档：https://mybatis.org/mybatis-3/zh/index.html -->
<mapper namespace="org.rone.web.dao.UserDao">

    <resultMap type="org.rone.web.model.entity.User" id="UserMap">
        <result property="userNo" column="user_no" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userExplain" column="user_explain" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
            user_no, user_name, user_explain
        from rone.user
        where user_no = #{userNo}
    </select>

    <!--查询指定行数据-->
    <!-- #{} 会转义成 占位符？ -->
    <!-- ${} 无需转义直接替换 -->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
            user_no, user_name, user_explain
        from rone.user
        order by ${order}
            limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
        user_no, user_name, user_explain
        from rone.user
        <where>
            <if test="userNo != null and userNo != ''">
                and user_no = #{userNo}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userExplain != null and userExplain != ''">
                and user_explain = #{userExplain}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userNo" useGeneratedKeys="true">
        insert into rone.user(user_no, user_name, user_explain)
        values (#{userNo}, #{userName}, #{userExplain})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update rone.user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userExplain != null and userExplain != ''">
                user_explain = #{userExplain},
            </if>
        </set>
        where user_no = #{userNo}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from rone.user where user_no = #{userNo}
    </delete>

    <select id="getNamesByIds" resultType="java.lang.String" parameterType="java.util.List">
        select user_name from user where user_no in
        <foreach collection="idList" item="id" open="(" separator="," close=")">
            #{id,jdbcType=VARCHAR}
        </foreach>
    </select>

</mapper>